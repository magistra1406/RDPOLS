<div>
    <button onclick="document.getElementById('rdp-dialog').showModal()" class="btn btn-custom float-end">
        <span class="icon-paper" aria-hidden="true"></span> Tambah Laporan
    </button>

    <dialog id="rdp-dialog" style="width: 800px; border-radius: 10px; padding: 20px; border-color: white">
        <form method="dialog">
            <h1 class="modal-title fs-5 text-center mb-5"><b>Tambah Laporan</b></h1>

            <!-- NoPek -->
            <div class="mb-3">
                <label for="nopek"><b>NoPek</b></label>
                <input type="text" id="nopek" class="form-control" placeholder="Masukkan Tipe RDP" />
            </div>

            <!-- Alamat -->
            <div class="mb-3">
                <label for="alamat"><b>Alamat</b></label>
                <input type="text" id="alamat" class="form-control" placeholder="Masukkan Alamat RDP" />
            </div>

            <!-- Deskripsi Laporan -->
            <div class="mb-3">
                <label for="DeskripsiLaporan"><b>Deskripsi Laporan</b></label>
                <input type="text" id="DeskripsiLaporan" class="form-control" placeholder="Deskripsi Laporan" />
            </div>

            <!-- Dokumentasi -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <label><b>Dokumentasi RDP Tampak Depan</b></label>
                    <input type="file" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label><b>Dokumentasi RDP Tampak Belakang</b></label>
                    <input type="file" class="form-control" />
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label><b>Dokumentasi Ruang Tamu RDP</b></label>
                    <input type="file" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label><b>Dokumentasi Kamar Tidur RDP</b></label>
                    <input type="file" class="form-control" />
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label><b>Dokumentasi Garasi RDP</b></label>
                    <input type="file" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label><b>Dokumentasi Kamar Mandi RDP</b></label>
                    <input type="file" class="form-control" />
                </div>
            </div>
            <div class="mb-3">
                <label><b>Dokumentasi Fasilitas RDP</b></label>
                <input type="file" class="form-control" />
            </div>

            <!-- Submit button -->
            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-primary me-2">Simpan</button>
                <button type="button" class="btn btn-secondary">Batal</button>
            </div>
        </form>
    </dialog>
</div>

