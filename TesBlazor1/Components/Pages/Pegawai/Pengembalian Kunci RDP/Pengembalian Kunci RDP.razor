@page "/kunciRDP-pegawai"
@attribute [StreamRendering]

<PageTitle>Penyerahan Kunci</PageTitle>

<AuthorizeView>
    <Authorized>
        <div class="container mt-3">
            <div class="d-flex justify-content-between align-items-center">
                <div class="badge bg-light text-dark mb-2">
                    <h1 class="page-title">Pengembalian Kunci RDP</h1>
                </div>
                <div>
                    <DialogNotif></DialogNotif>
                </div>
            </div>

            <!-- Header container with vertical alignment -->
            <div class="d-flex justify-content-between align-items-center">
                <!-- Date on the left -->
                <div class="col-md-6">
                    <span class="badge bg-light text-dark mt-2" style="margin-bottom:15px">
                        <span>
                            <img src="/images/date-icon.png" style="height: 18px; width: 18px; margin-bottom: 2px; margin-right: 10px" />
                        </span>
                        @DateTime.Now.ToString("dddd, dd MMMM yyyy")
                    </span>
                </div>
            </div>
        
        <div class="container-fluid mt-4 px-4">
    <div class="card shadow-lg p-4" style="border-radius: 15px; margin-top: -20px;">
      
        <!-- Form Content -->
        <form>
            <!-- Nama -->
            <div class="mb-3">
                <label for="nama" class="form-label" style="font-weight: bold;">Nama</label>
                <input type="text" id="nama" class="form-control" value="Moh. Magistra Jahfal" readonly style="background-color: #f9f9f9;" />
            </div>

            <!-- Nopek -->
            <div class="mb-3">
                <label for="nopek" class="form-label" style="font-weight: bold;">Nopek</label>
                <input type="text" id="nopek" class="form-control" value="2048" readonly style="background-color: #f9f9f9;" />
            </div>

            <!-- Alamat -->
            <div class="mb-3">
                <label for="alamat" class="form-label" style="font-weight: bold;">Alamat</label>
                <input type="text" id="alamat" class="form-control" value="RDP Donan No. 233" readonly style="background-color: #f9f9f9;" />
            </div>

            <!-- Petugas Penerima -->
            <div class="mb-3">
                <label for="petugas" class="form-label" style="font-weight: bold;">Petugas Penerima</label>
                <input type="text" id="petugas" class="form-control" placeholder="Masukkan petugas penerima kunci" />
            </div>

            <!-- Tanggal Pengembalian -->
            <div class="mb-3">
                <label for="tanggal" class="form-label" style="font-weight: bold;">Tanggal Pengembalian</label>
                <input type="date" id="tanggal" class="form-control" placeholder="DD/MM/YYYY" />
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn custom-btn-primary me-3">Kirim</button>
                <button type="button" class="btn custom-btn-secondary">Batal</button>
            </div>
        </form>
    </div>
</div>

        </div>

        <style>
            .container-fluid {
                max-width: 100%;
                padding-left: 0;
                padding-right: 0;
            }

            .card {
                background-color: #ffffff;
                border: 1px solid #ddd;
            }

            /* Custom Primary Button Styling */
            .custom-btn-primary {
                background-color: #007bff; /* Primary color */
                color: white;
                border: none;
                min-width: 100px;
                border-radius: 5px;
            }

            /* Custom Secondary Button Styling */
            .custom-btn-secondary {
                background-color: #ffffff;
                color: #333;
                border: 1px solid #ddd;
                min-width: 100px;
                border-radius: 5px;
            }

            /* Form input style */
            .form-control {
                border-radius: 5px;
            }
        </style>


    </Authorized>
</AuthorizeView>