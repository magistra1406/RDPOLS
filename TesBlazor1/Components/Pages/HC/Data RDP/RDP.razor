<!-- rdp.razor -->
@page "/rdp"
@attribute [StreamRendering]

<PageTitle>Data RDP HC</PageTitle>

<AuthorizeView Roles="SuperAdmin">
    <Authorized>
        <!-- Date and Add RDP Button -->
        <h1>RDP</h1>
        <div class="row mb-3">
            <div class="col-md-6">
                <span class="badge bg-light text-dark mt-2" style="margin-bottom:15px">
                    <span>
                        <img src="/images/date-icon.png" style="height: 18px; width: 18px; margin-bottom: 2px; margin-right: 10px" />
                    </span>
                    @DateTime.Now.ToString("dddd, dd MMMM yyyy")
                </span>
            </div>



            <!-- Grid Layout with Cards -->
            <div class="row">


                <!-- Card 2: Data RDP -->
                <div class="col-md-6 mb-4">
                    <a href="/rdpHC" class="text-decoration-none">
                        <div class="card h-100 shadow-sm" style="min-height: 200px;">
                            <div class="card-body d-flex align-items-center justify-content-center">
                                <h5 class="card-title text-center text-dark" style="font-weight: bold;">Data RDP</h5>
                            </div>
                        </div>
                    </a>
                </div>

                <!-- Card 3: Lelang RDP -->
                <div class="col-md-6 mb-4">
                    <a href="/lelang-rdp" class="text-decoration-none">
                        <div class="card h-100 shadow-sm" style="min-height: 200px;">
                            <div class="card-body d-flex align-items-center justify-content-center">
                                <h5 class="card-title text-center text-dark" style="font-weight: bold;">Lelang RDP</h5>
                            </div>
                        </div>
                    </a>
                </div>

                <!-- Card 4: Kunci RDP -->
                <div class="col-md-6 mb-4">
                    <a href="/kunciRDP" class="text-decoration-none">
                        <div class="card h-100 shadow-sm" style="min-height: 200px;">
                            <div class="card-body d-flex align-items-center justify-content-center">
                                <h5 class="card-title text-center text-dark" style="font-weight: bold;">Kunci RDP</h5>
                            </div>
                        </div>
                    </a>
                </div>

                <!-- Card 5: Laporan Pemilik RDP -->
                <div class="col-md-6 mb-4">
                    <a href="admin/LaporanPemilik" class="text-decoration-none">
                        <div class="card h-100 shadow-sm" style="min-height: 200px;">
                            <div class="card-body d-flex align-items-center justify-content-center">
                                <h5 class="card-title text-center text-dark" style="font-weight: bold;">Laporan Pemilik RDP</h5>
                            </div>
                        </div>
                    </a>
                </div>

                <!-- Card 5: RDP Tersedia -->
                <div class="col-md-6 mb-4">
                    <a href="Rdptersedia" class="text-decoration-none">
                        <div class="card h-100 shadow-sm" style="min-height: 200px;">
                            <div class="card-body d-flex align-items-center justify-content-center">
                                <h5 class="card-title text-center text-dark" style="font-weight: bold;">RDP Tersedia</h5>
                            </div>
                        </div>
                    </a>
                </div>

                <!-- Card 6: Data Fasilitas -->
                <div class="col-md-6 mb-4">
                    <a href="Datafasilitas" class="text-decoration-none">
                        <div class="card h-100 shadow-sm" style="min-height: 200px;">
                            <div class="card-body d-flex align-items-center justify-content-center">
                                <h5 class="card-title text-center text-dark" style="font-weight: bold;">Data Fasilitas</h5>
                            </div>
                        </div>
                    </a>
                </div>

            </div>
        </div>
    </Authorized>
</AuthorizeView>

<AuthorizeView Roles="Pegawai">
    <Authorized>
        <!-- Date and Add RDP Button -->
        <div class="container mt-3">
            <div class="d-flex justify-content-between align-items-center">
                <div class="badge bg-light text-dark mb-2">
                    <h1 class="page-title">RDP</h1>
                </div>
                @if (context.User.IsInRole("Pegawai"))
                    {
                    <div>
                        <DialogNotif></DialogNotif>
                    </div>
                    }
            </div>

            <!-- Header container with vertical alignment -->
            <div class="d-flex justify-content-between align-items-center">
                <!-- Date on the left -->
                <div class="col-md-6">
                    <span class="badge bg-light text-dark mt-2" style="margin-bottom:15px">
                        <span>
                            <img src="/images/date-icon.png" style="height: 18px; width: 18px; margin-bottom: 2px; margin-right: 10px" />
                        </span>
                        @DateTime.Now.ToString("dddd, dd MMMM yyyy")
                    </span>
                </div>
            </div>



            <!-- Grid Layout with Cards -->
            <div class="row">

                <!-- Card 3: Lelang RDP -->
                <div class="col-md-6 mb-4">
                    <a href="/lelang-rdp-pegawai" class="text-decoration-none">
                        <div class="card h-100 shadow-sm" style="min-height: 200px;">
                            <div class="card-body d-flex align-items-center justify-content-center">
                                <h5 class="card-title text-center text-dark" style="font-weight: bold;">Lelang RDP</h5>
                            </div>
                        </div>
                    </a>
                </div>

                <!-- Card 4: Kunci RDP -->
                <div class="col-md-6 mb-4">
                    <a href="/kunciRDP-pegawai" class="text-decoration-none">
                        <div class="card h-100 shadow-sm" style="min-height: 200px;">
                            <div class="card-body d-flex align-items-center justify-content-center">
                                <h5 class="card-title text-center text-dark" style="font-weight: bold;">Kunci RDP</h5>
                            </div>
                        </div>
                    </a>
                </div>

                <!-- Card 5: Laporan Pemilik RDP -->
                <div class="col-md-6 mb-4">
                    <a href="admin/LaporanPemilik-pegawai" class="text-decoration-none">
                        <div class="card h-100 shadow-sm" style="min-height: 200px;">
                            <div class="card-body d-flex align-items-center justify-content-center">
                                <h5 class="card-title text-center text-dark" style="font-weight: bold;">Laporan Pemilik RDP</h5>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </Authorized>
</AuthorizeView>
