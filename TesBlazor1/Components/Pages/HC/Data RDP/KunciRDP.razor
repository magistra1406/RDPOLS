@page "/kunciRDP"
@attribute [StreamRendering]

<PageTitle> Penyerahan Kunci</PageTitle>

<AuthorizeView>
    <Authorized>
        <div class="container mt-3">
            <div class="badge bg-light text-dark mb-2">
                <h1 class="page-title">Penyerahan Kunci</h1>
            </div>

            <!-- Header container with vertical alignment -->
            <div class="d-flex justify-content-between align-items-center">
                <div class="col-md-6">
                    <span class="badge bg-light text-dark mt-2" style="margin-bottom:15px">
                        <img src="/images/date-icon.png" style="height: 18px; width: 18px; margin-bottom: 2px; margin-right: 10px" />
                        @DateTime.Now.ToString("dddd, dd MMMM yyyy")
                    </span>
                </div>
            </div>

            <!-- Search and Filter Section -->
            <div class="d-flex align-items-center gap-2 mt-4 justify-content-between">
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="Cari RDP" />
                </div>
                <div class="ms-auto d-flex align-items-center gap-2">
                    <div class="btn-group me-2">
                        <button class="btn btn-light me-2" style="width: 150px;" @onclick='() => FilterByCondition("Close")'>Close</button>
                        <button class="btn btn-light me-2" style="width: 150px;" @onclick='() => FilterByCondition("Open")'>Open</button>
                    </div>
                </div>
            </div>

            <!-- Cards and Table -->
            <div class="combined-section mt-4">
                <div class="card-lelang mb-0">
                    <p>Gunung Simping (120)</p>
                    <span>
                        <img src="/images/arrow-bot.png" alt="Alternate Text" style="height: 10px; color: #FFFFFF; width: 20px; margin-left: 1rem; margin-right: 0.5rem" />
                    </span>
                </div>

                <!-- Table with Data Rows -->
                <div class="table-container">
                    <table class="table text-center m-0">
                        <thead style="background-color: black; color: white;">
                            <tr style="font-weight: normal; font-size: 14px">
                                <th>No</th>
                                <th>Alamat</th>
                                <th>No RDP</th>
                                <th>Tipe</th>
                                <th>Kondisi</th>
                                <th>Nopek</th>
                                <th>Nama</th>
                                <th>Status</th>
                                <th>Tanggal Peminjaman</th>
                                <th>Tanggal Pengembalian</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var rdp in rdpData)
                            {
                                <tr style="background-color: @rdp.RowColor; font-size: 14px; position: relative;">
                                    <td>@rdp.No</td>
                                    <td>@rdp.Alamat</td>
                                    <td>@rdp.NoRDP</td>
                                    <td>@rdp.Tipe</td>
                                    <td>@rdp.Kondisi</td>
                                    <td>@rdp.Nopek</td>
                                    <td>@rdp.Nama</td>
                                    <td>@rdp.Status</td>
                                    <td>@rdp.TanggalPeminjaman</td>
                                    <td>@rdp.TanggalPengembalian</td>
                                    <td>
                                        <button class="btn btn-light"><span class="bi bi-upload" aria-hidden="true"></span></button>
                                        <button class="btn btn-light"><span class="bi bi-check2" aria-hidden="true"></span></button>
                                        <button class="btn btn-light"><span class="bi bi-eye" aria-hidden="true"></span></button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Additional Cards with icons on the right -->
            <div class="card-lelang mt-4">
                <p>Donan (4)</p>
                <span>
                    <img src="/images/arrow-bot.png" alt="Alternate Text" style="height: 10px; color: #FFFFFF; width: 20px; margin-left: 1rem; margin-right: 0.5rem" />
                </span>
            </div>
            <div class="card-lelang mt-4">
                <p>Sidanegara (9)</p>
                <span>
                    <img src="/images/arrow-bot.png" alt="Alternate Text" style="height: 10px; color: #FFFFFF; width: 20px; margin-left: 1rem; margin-right: 0.5rem" />
                </span>
            </div>
            <div class="card-lelang mt-4">
                <p>Apartemen (20)</p>
                <span>
                    <img src="/images/arrow-bot.png" alt="Alternate Text" style="height: 10px; color: #FFFFFF; width: 20px; margin-left: 1rem; margin-right: 0.5rem" />
                </span>
            </div>
        </div>

        @code {
        private List<RDPModel> rdpData = new List<RDPModel>
        {
        new RDPModel { No = 1, Alamat = "Gunung Simping", NoRDP = 1, Tipe = "A", Kondisi = "Layak", Nopek = 2056, Nama = "Kerin Cecillia", Status = "Close", TanggalPeminjaman = "dd/mm/yy", TanggalPengembalian = "dd/mm/yy", RowColor = "#EDFFC3" },
        new RDPModel { No = 2, Alamat = "Gunung Simping", NoRDP = 2, Tipe = "A", Kondisi = "Layak", Nopek = 2090, Nama = "Kerin Cecillia", Status = "Open", TanggalPeminjaman = "dd/mm/yy", TanggalPengembalian = "dd/mm/yy", RowColor = "#FFE3E4" },
        new RDPModel { No = 3, Alamat = "Gunung Simping", NoRDP = 3, Tipe = "A", Kondisi = "Layak", Nopek = 2028, Nama = "Dinda Rachma", Status = "Open", TanggalPeminjaman = "dd/mm/yy", TanggalPengembalian = "dd/mm/yy", RowColor = "#FFE3E4" },
        new RDPModel { No = 4, Alamat = "Gunung Simping", NoRDP = 4, Tipe = "A", Kondisi = "Layak", Nopek = 2057, Nama = "Dinda Rachma", Status = "Close", TanggalPeminjaman = "dd/mm/yy", TanggalPengembalian = "dd/mm/yy", RowColor = "#EDFFC3" }
        };

        private void FilterByCondition(string condition)
        {
            // Implement filter logic here (e.g., filter rdpData based on the condition)
        }

        public class RDPModel
        {
            public int No { get; set; }
            public string Alamat { get; set; }
            public int NoRDP { get; set; }
            public string Tipe { get; set; }
            public string Kondisi { get; set; }
            public int Nopek { get; set; }
            public string Nama { get; set; }
            public string Status { get; set; }
            public string TanggalPeminjaman { get; set; }
            public string TanggalPengembalian { get; set; }
            public string RowColor { get; set; }
            public bool IsSelected { get; set; } // Property to bind to the checkbox
        }
        }

