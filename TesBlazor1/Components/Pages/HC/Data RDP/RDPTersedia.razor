                background-color: #358DC7;
                border-radius: 15px;
                margin-bottom: 0;
                padding: 0;
            }


            .search-bar input,
            .form-select {
                width: 100%;
                max-width: 145px; /* Set a maximum width for a smaller size */
            }

            .action-buttons button, .action-buttons select {
                min-width: 150px;
            }

            .accordion-button {
                font-weight: bold;
                color: #fff;
            }

