@page "/RDPTersedia"
@attribute [StreamRendering]

<PageTitle>RDP Tersedia</PageTitle>

<AuthorizeView>
    <Authorized>
        <div class="container mt-3">
            <div class="badge bg-light text-dark mb-2">
                <h1 class="page-title">RDP Tersedia</h1>
            </div>

            <!-- Header container with vertical alignment -->
            <div class="d-flex justify-content-between align-items-center">
                <!-- Date on the left -->
                <div class="col-md-6">
                    <span class="badge bg-light text-dark mt-2" style="margin-bottom:15px">
                        <span>
                            <img src="/images/date-icon.png" style="height: 18px; width: 18px; margin-bottom: 2px; margin-right: 10px" />
                        </span>
                        @DateTime.Now.ToString("dddd, dd MMMM yyyy")
                    </span>
                </div>
            </div>
            <!-- Search Bar, Dropdowns, and Search Button Row -->
            <div class="d-flex align-items-center gap-2 mt-4">
                <!-- Search Bar -->
                <div class="col-md-4">
                    <input type="text" class="form-control" placeholder="Cari RDP" />
                </div>

                <!-- Dropdowns moved to the right -->
                <div class="d-flex gap-2 ms-0 align-items-center">
                    <select class="form-select">
                        <option selected>Alamat RDP</option>
                        <option value="1">Gunung Simping</option>
                        <option value="2">Donan</option>
                        <option value="3">Sidanegara</option>
                        <option value="4">Tegal Kamulyan</option>
                        <option value="5">Apartemen</option>
                    </select>
                    <select class="form-select">
                        <option selected>Tipe Cluster</option>
                        <option value="1">Cluster 1</option>
                        <option value="2">Cluster 2</option>
                        <option value="3">Cluster 3</option>
                        <option value="4">Cluster 4</option>
                        <option value="5">Cluster 5</option>
                        <option value="6">Cluster 6</option>
                    </select>
                    <NavLink class="btn btn-light d-flex align-items-center custom-btn" href="/nonlelangnopek">
                        <span class="bi bi-person-fill-add me-2" aria-hidden="true"></span> Non Lelang
                    </NavLink>
                    <DialogDurasi></DialogDurasi>
                </div>
            </div>

            <div class="row mb-4" style="margin-top: 15px">

                <div class="col-12">

                    <div class="card-lelang mb-3">


                        <div class="row">
                            <div class="col">
                                <p class="mb-6" style="margin-left: 12px; margin-top: 12px; color: white; font-size: 16px">Gunung Simping</p>
                            </div>
                            <div class="col text-right">
                                <p class="mb-6" style="text-align: right; margin-right: 12px; margin-top: 12px; color: #FFF16E; font-size: 16px; font-style: italic;">
                                    Periode Lelang
                                    <span style="font-size: 14px; color: white; font-style: normal; text-decoration: underline; font-weight: bold">
                                        NOT SET
                                    </span>
                                    <span> <img src="/images/arrow-bot.png" alt="Alternate Text" style="height: 10px; width: 20px; margin-left: 1rem; margin-right: 0.5rem" /></span>
                                </p>
                            </div>
                        </div>


                        <table class="table table-striped text-center m-0" style="width: 100%; margin: 0; border-bottom-left-radius: 15px; border-bottom-right-radius: 15px; overflow: hidden;">
                            <!-- Set margin to 0 and width to 100% -->
                            <thead style="background-color: black; color: white;">
                                <tr style="font-weight: normal; font-size: 14px">
                                    <th>No</th>
                                    <th>Alamat</th>
                                    <th>No RDP</th>
                                    <th>Tipe RDP</th>
                                    <th>Cluster</th>
                                    <th>Status RDP</th>
                                    <th>Kondisi</th>
                                    <th>Aksi</th>
                                    <th>Tawarkan</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var rdp in rdpData)
                                {
                                    <tr style="background-color: @rdp.RowColor; font-size: 14px; ">
                                        <td>@rdp.No</td>
                                        <td>@rdp.Alamat</td>
                                        <td>@rdp.NoRDP</td>
                                        <td>@rdp.TipeRDP</td>
                                        <td>@rdp.Cluster</td>
                                        <td>@rdp.StatusRDP</td>
                                        <td>@rdp.Kondisi</td>
                                        <td>
                                            <NavLink class="btn btn-light" href="/">
                                                <span class="bi bi-filetype-pdf" aria-hidden="true"></span>
                                            </NavLink>
                                            <NavLink class="btn btn-light" href="/">
                                                <span class="bi bi-eye" aria-hidden="true"></span>
                                            </NavLink>
                                        </td>
                                        <td>
                                            <input type="checkbox" id="bid" name="bidRdp" value="kosong" class="form-check-input">

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>

                    <div class="card-lelang">
                        <div class="row">
                            <div class="col">
                                <p class="mb-6" style="margin-left: 12px; margin-top: 12px; color: white; font-size: 16px">Donan</p>
                            </div>
                            <div class="col text-right">
                                <p class="mb-6" style="text-align: right; margin-right: 12px; margin-top: 12px; color: #FFF16E; font-size: 16px; font-style: italic;">
                                    Periode Lelang
                                    <span style="font-size: 14px; color: white; font-style: normal; text-decoration: underline; font-weight: bold">
                                        NOT SET
                                    </span>
                                    <span>
                                        <img src="/images/arrow-bot.png" alt="Alternate Text" style="height: 10px; width: 20px; margin-left: 1rem; margin-right: 0.5rem" />
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <div class="auction-button-container mt-4 text-end">
                <a href="/lelang-rdp" class="ms-auto text-decoration-none">
                    <button class="btn btn-success">Buka Lelang</button>
                </a>
            </div>
        </div>

        @code {
        private List<RDPModel> rdpData = new List<RDPModel>
        {
        new RDPModel { No = 1, Alamat = "Gunung Simping", NoRDP = 301, TipeRDP = "Perumahan", Cluster = "4", SK = "SK001", StatusRDP = "Tersedia", Kondisi = "Layak", RowColor = "#EDFFC3" },
        new RDPModel { No = 2, Alamat = "Gunung Simping", NoRDP = 302, TipeRDP = "Perumahan", Cluster = "4", SK = "SK002", StatusRDP = "Tersedia", Kondisi = "Layak", RowColor = "#E5F4C1" },
        new RDPModel { No = 3, Alamat = "Gunung Simping", NoRDP = 303, TipeRDP = "Perumahan", Cluster = "5", SK = "SK003", StatusRDP = "Tersedia", Kondisi = "Layak", RowColor = "#EDFFC3" },

        };

        private void OpenPdfModal(RDPModel rdp)
        {
            // Logic to open PDF modal
        }

        public class RDPModel
        {
            public int No { get; set; }
            public string Alamat { get; set; }
            public int NoRDP { get; set; }
            public string TipeRDP { get; set; }
            public string Cluster { get; set; }
            public string SK { get; set; }
            public string StatusRDP { get; set; }
            public string Kondisi { get; set; }
            public string RowColor { get; set; }
        }
        }

