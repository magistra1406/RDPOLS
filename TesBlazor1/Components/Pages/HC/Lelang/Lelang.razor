<PageTitle>Pelelangan RDP</PageTitle>

<AuthorizeView>
    <Authorized>
        <div class="container mt-3">
            <div class="badge bg-light text-dark mb-2">
                <h1 class="page-title">Pelelangan RDP Saat Ini</h1>
            </div>

            <!-- Header container with vertical alignment -->
            <div class="d-flex justify-content-between align-items-center">
                <!-- Date on the left -->
                <div class="col-md-6">
                    <span class="badge bg-light text-dark mt-2" style="margin-bottom:15px">
                        <span>
                            <img src="/images/date-icon.png" style="height: 18px; width: 18px; margin-bottom: 2px; margin-right: 10px" />
                        </span>
                        @DateTime.Now.ToString("dddd, dd MMMM yyyy")
                    </span>
                </div>
            </div>

            <!-- Button Penyerahan Kunci RDP -->
            <div class="d-flex align-items-center gap-2 mt-4">
                <a href="/PenyerahanKunci" class="ms-auto text-decoration-none">
                    <div class="d-flex justify-content-between align-items-center">
                        <button class="btn btn-danger">Penyerahan Kunci</button>
                    </div>
                </a>
            </div>


            <div class="row mb-4" style="margin-top: 15px">
                <div class="col-12">
                    <div class="card-lelang mb-3">
                        <div class="row">
                            <div class="col">
                                <p class="mb-6" style="margin-left: 12px; margin-top: 12px; color: white; font-size: 16px">Apartement A210</p>
                            </div>
                            <div class="col text-right">
                                <p class="mb-6" style="text-align: right; margin-right: 12px; margin-top: 12px; color: #FFF16E; font-size: 16px; font-style: italic;">
                                    Periode Lelang
                                    <span style="font-size: 14px; color: white; font-style: normal; text-decoration: underline; font-weight: bold; font-style: italic">
                                        30/09/2024 – 15/10/2024
                                    </span>
                                    <span>
                                        <img src="/images/arrow-bot.png" alt="Alternate Text" style="height: 10px; color: #FFFFFF; width: 20px; margin-left: 1rem; margin-right: 0.5rem" />
                                    </span>
                                </p>
                            </div>
                        </div>

                        <!-- New Row for "Klasemen Terkini" -->
                        <div class="card-lelang" style="background-color: white; border-radius: 0;">
                            <div class="row">
                                <div class="col">
                                    <p class="mb-6" style="margin-left: 12px; margin-top: 12px; color: black; font-size: 16px">Klasemen Terkini:</p>
                                </div>
                                <div class="col text-right">
                                    <p class="mb-6" style="text-align: right; margin-right: 12px; margin-top: 12px; color: #9A9A9A; font-size: 16px;">
                                        5 pekerja mengikuti lelang
                                    </p>
                                </div>
                            </div>
                        </div>


                        <table class="table table-striped text-center m-0" style="width: 100%; margin: 0; border-bottom-left-radius: 15px; border-bottom-right-radius: 15px; overflow: hidden;">
                            <thead style="background-color: black; color: white;">
                                <tr style="font-weight: normal; font-size: 14px">
                                    <th>No</th>
                                    <th>Nopek</th>
                                    <th>Nama</th>
                                    <th>Poin</th>
                                    <th>Pilihan Ke-</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var lelang in rdpData)
                                {
                                    <tr style="background-color: @lelang.RowColor; font-size: 14px; ">
                                        <td>@lelang.No</td>
                                        <td>@lelang.Nopek</td>
                                        <td>@lelang.Nama</td>
                                        <td>@lelang.Poin</td>
                                        <td>@lelang.Pilihan</td>                         
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>

                    <div class="card-lelang" style="margin-bottom: 15px;">
                        <div class="row">
                            <div class="col">
                                <p class="mb-6" style="margin-left: 12px; margin-top: 12px; color: white; font-size: 16px">Donan No.80</p>
                            </div>
                            <div class="col text-right">
                                <p class="mb-6" style="text-align: right; margin-right: 12px; margin-top: 12px; color: #FFF16E; font-size: 16px; font-style: italic;">
                                    Periode Lelang
                                    <span style="font-size: 14px; color: white; font-style: normal; text-decoration: underline; font-weight: bold; font-style: italic">
