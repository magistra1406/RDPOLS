            .profile-img {
                width: 150px;
                height: 150px;
                object-fit: cover;
                margin-right: 16px;
            }

            .d-flex .col-4 {
                font-weight: bold;
            }

            .d-flex .col-8 {
                text-align: left;
            }

            /* Memberikan jarak vertikal antar elemen */
            .mt-2 {
                margin-top: 0.5rem;
            }

            .square-profile-pic {
                width: 100px;
                height: 100px;
                object-fit: cover; /* Agar gambar tetap proporsional */
            }

