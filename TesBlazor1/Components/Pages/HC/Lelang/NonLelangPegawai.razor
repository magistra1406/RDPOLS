@page "/nonlelangpegawai"
@inject NavigationManager Navigation

<PageTitle>Non Lelang</PageTitle>

<AuthorizeView>
    <Authorized>
        <div class="container mt-3">
            <div class="badge bg-light text-dark mb-2">
                <h1 class="page-title">Non Lelang</h1>
            </div>

            <!-- Date and Add RDP Button -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <!-- Date -->
                    <span class="badge bg-light text-dark mt-2">
                        <span>
                            <img src="/images/date-icon.png" style="height: 18px; width: 18px; margin-bottom: 2px; margin-right: 10px" />
                        </span>
                        @DateTime.Now.ToString("dddd, dd MMMM yyyy")
                    </span>
                </div>
            </div>

            <!-- Search bar and Buttons -->
            <div class="row mb-3 align-items-center">
                <div class="col-md-6">
                    <input class="form-control" type="text" placeholder="Masukkan Nopek" @bind="SearchTerm" />
                </div>
                <div class="col-md-2">
                    <!-- Tombol Synchronize di posisi kanan -->
                    <button class="btn btn-primary" @onclick="SearchNopek">Cari</button>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-12">
                    <div class="card p-3 shadow-sm">
                        <div class="row align-items-center">
                            <div class="col-md-2 text-center">
                                <img src="@(rdpData?.ImageUrl ?? "/images/profile.png")" alt="Profile Picture" class="img-fluid profile-img" />
                            </div>
                            <div class="col-md-10">
                                <div class="d-flex">
                                    <div class="col-4"><strong>Nama Lengkap</strong></div>
                                    <div class="col-8"><span class="text-muted">: Moh. Magistra Jahfal</span></div>
                                </div>
                                <div class="d-flex mt-2">
                                    <div class="col-4"><strong>Nopek</strong></div>
                                    <div class="col-8"><span class="text-muted">: 2048</span></div>
                                </div>
                                <div class="d-flex mt-2">
                                    <div class="col-4"><strong>Posisi dalam Role Level (PRL)</strong></div>
                                    <div class="col-8"><span class="text-muted">: 20</span></div>
                                </div>
                                <div class="d-flex mt-2">
                                    <div class="col-4"><strong>Poin</strong></div>
                                    <div class="col-8"><span class="text-muted">: 95.100</span></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mb-4" style="margin-top: 15px">
                <!-- RDP Sesuai PRL Section -->
                <div class="col-12">
                    <div class="card shadow-sm mb-3" style="background-color: white; border-radius: 8px;">
                        <div class="card-body d-flex align-items-center" style="padding: 10px;">
                            <!-- Judul -->
                            <p style="font-size: 16px; margin-bottom: 0; font-weight: bold; margin-right: 16px;">
                                RDP Sesuai PRL
                            </p>

                            <!-- Dropdowns di sebelah kanan -->
                            <div class="d-flex gap-2 ms-auto">
                                <select class="form-select">
                                    <option selected>Alamat RDP</option>
                                    <option value="1">Gunung Simping</option>
                                    <option value="2">Donan</option>
                                    <option value="3">Sidanegara</option>
                                    <option value="4">Tegal Kamulyan</option>
                                    <option value="5">Apartemen</option>
                                </select>

                                <select class="form-select">
                                    <option selected>Tipe Cluster</option>
                                    <option value="1">Cluster 1</option>
                                    <option value="2">Cluster 2</option>
                                    <option value="3">Cluster 3</option>
                                    <option value="4">Cluster 4</option>
                                    <option value="5">Cluster 5</option>
                                    <option value="6">Cluster 6</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Gunung Simping Card -->
                <div class="col-12">
                    <div class="card-lelang mb-3" style="background-color: #358DC7; border-radius: 15px;">
                        <div class="row">
                            <div class="col">
                                <p class="mb-6" style="margin-left: 12px; margin-top: 12px; color: white; font-size: 16px">
                                    Gunung Simping (
                                </p>
                            </div>
                            <div class="col text-right">
                                <p class="mb-6" style="text-align: right; margin-right: 12px; margin-top: 12px; color: #FFF16E; font-size: 16px; font-style: italic;">
                                    Periode Lelang
                                    <span style="font-size: 14px; color: white; font-style: normal; text-decoration: underline; font-weight: bold">
                                        NOT SET
                                    </span>
                                    <span><img src="/images/arrow-bot.png" alt="Alternate Text" style="height: 10px; width: 20px; margin-left: 1rem; margin-right: 0.5rem" /></span>
                                </p>
                            </div>
                        </div>

                        <!-- Tabel Gunung Simping -->
                        <table class="table table-striped text-center m-0" style="width: 100%; margin: 0; border-bottom-left-radius: 15px; border-bottom-right-radius: 15px; overflow: hidden;">
                            <thead style="background-color: black; color: white;">
                                <tr style="font-weight: normal; font-size: 14px">
                                    <th>No</th>
                                    <th>Alamat</th>
                                    <th>No RDP</th>
                                    <th>Tipe RDP</th>
                                    <th>Cluster</th>
                                    <th>Status RDP</th>
                                    <th>Kondisi</th>
                                    <th>Aksi</th>
                                    <th>Pilih</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr style="background-color: #F2FDD4; font-size: 14px;">
                                    <td>1</td>
                                    <td>Gunung Simping</td>
                                    <td>301</td>
                                    <td>Perumahan</td>
                                    <td>4</td>
                                    <td>Tersedia</td>
                                    <td>Layak</td>
                                    <td>
                                        <button class="btn btn-light"><span class="bi bi-eye" aria-hidden="true"></span></button>
                                        <button class="btn btn-light"><span class="bi bi-filetype-pdf" aria-hidden="true"></span></button>
                                    </td>
                                    <td>
                                        <button class="btn btn-primary">Pilih</button>
                                    </td>
                                </tr>
                                <tr style="background-color: #F2FDD4; font-size: 14px;">
                                    <td>2</td>
                                    <td>Gunung Simping</td>
                                    <td>302</td>
                                    <td>Perumahan</td>
                                    <td>4</td>
                                    <td>Tersedia</td>
                                    <td>Layak</td>
                                    <td>
                                        <button class="btn btn-light"><span class="bi bi-eye" aria-hidden="true"></span></button>
                                        <button class="btn btn-light"><span class="bi bi-filetype-pdf" aria-hidden="true"></span></button>
                                    </td>
                                    <td>
                                        <a href="/lanjutan_nonlelang" class="btn btn-primary">Pilih</a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <!-- Card Lelang untuk Donan -->
                    <div class="card-lelang mb-3" style="background-color: #358DC7; border-radius: 15px;">
                        <div class="row">
                            <div class="col">
                                <p class="mb-6" style="margin-left: 12px; margin-top: 12px; color: white; font-size: 16px">
                                    Donan
                                </p>
                            </div>
                            <div class="col text-right">
                                <p class="mb-6" style="text-align: right; margin-right: 12px; margin-top: 12px; color: #FFF16E; font-size: 16px; font-style: italic;">
                                    Periode Lelang
                                    <span style="font-size: 14px; color: white; font-style: normal; text-decoration: underline; font-weight: bold">
                                        NOT SET
                                    </span>
                                    <span><img src="/images/arrow-bot.png" alt="Alternate Text" style="height: 10px; width: 20px; margin-left: 1rem; margin-right: 0.5rem" /></span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>




        @code {
        private string SearchTerm { get; set; } = string.Empty;
        private LelangData? rdpData;
        private bool showModal = false;
        private string? selectedImageUrl;

        private LelangData[] allData = new[]
        {
        new LelangData { No = 1, AlamatRumah = "Gunung Simping 301", Points = 150, ImageUrl = "/images/house1.png" },
        new LelangData { No = 2, AlamatRumah = "Gunung Simping 302", Points = 250, ImageUrl = "/images/house2.png" },
        new LelangData { No = 3, AlamatRumah = "Apartemen 101", Points = 100, ImageUrl = "/images/house3.png" }
        };

        protected override void OnParametersSet()
        {
            if (rdpData == null)
            {
                rdpData = new LelangData
                {
                    No = 0,
                    AlamatRumah = "Data tidak ditemukan",
                    Points = 0,
                    ImageUrl = "/images/profile.png"  // This assumes the image is located in the wwwroot/images directory
                };
            }
        }

        private void ShowImage(string imageUrl)
        {
            selectedImageUrl = imageUrl;
            showModal = true;
        }

        private void CloseModal()
        {
            showModal = false;
            selectedImageUrl = null;
        }

        private void SearchNopek()
        {
            Navigation.NavigateTo($"/nonlelangpegawai/{SearchTerm}");
        }

        public class LelangData
        {
            public int No { get; set; }
            public string AlamatRumah { get; set; }
            public int Points { get; set; }
            public string ImageUrl { get; set; }
        }
        }
