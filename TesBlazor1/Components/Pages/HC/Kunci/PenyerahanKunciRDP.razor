@page "/PenyerahanKunci"
@attribute [StreamRendering]

<PageTitle>Penyerahan Kunci</PageTitle>

<AuthorizeView>
    <Authorized>
        <div class="container mt-3">
            <div class="badge bg-light text-dark mb-2">
                <h1 class="page-title">Penyerahan Kunci</h1>
            </div>

            <!-- Header container with vertical alignment -->
            <div class="d-flex justify-content-between align-items-center">
                <!-- Date on the left -->
                <div class="col-md-6">
                    <span class="badge bg-light text-dark mt-2" style="margin-bottom:15px">
                        <span>
                            <img src="/images/date-icon.png" style="height: 18px; width: 18px; margin-bottom: 2px; margin-right: 10px" />
                        </span>
                        @DateTime.Now.ToString("dddd, dd MMMM yyyy")
                    </span>
                </div>
            </div>

            <div class="row mb-4" style="margin-top: 15px">
                <div class="col-12">
                    <div class="card-lelang mb-3">
                        <div class="row">
                            <div class="col">
                                <p class="mb-6" style="margin-left: 12px; margin-top: 12px; color: white; font-size: 16px">Apartement A210</p>
                            </div>
                            <div class="col text-right">
                                <p class="mb-6" style="text-align: right; margin-right: 12px; margin-top: 12px; color: #FFF16E; font-size: 16px; font-style: italic;">
                                    (Melalui Pelelangan)
                                    <span style="font-size: 14px; color: white; font-style: normal; text-decoration: underline; font-weight: bold; font-style: italic">
                                       2056 - Dinda Rachma
                                    </span>
                                    <span>
                                        <img src="/images/arrow-bot.png" alt="Alternate Text" style="height: 10px; color: #FFFFFF; width: 20px; margin-left: 1rem; margin-right: 0.5rem" />
                                    </span>
                                </p>
                            </div>
                        </div>


                        <table class="table table-striped text-center m-0" style="width: 100%; margin: 0; overflow: hidden;">
                            <thead style="background-color: black; color: white;">
                                <th>No</th>
                                <th>Nopek</th>
                                <th>Nama</th>
                                <th>Poin</th>
                                <th>Due Date</th>
                                <th>Tanggal Pesan</th>
                                <th>Pilihan Ke-</th>
                                <th>Aksi</th>
                            </thead>
                            <tbody>
                                @foreach (var lelang in rdpData)
                                {
                                    <tr style="background-color: @lelang.RowColor; font-size: 14px; ">
                                        <td>@lelang.No</td>
                                        <td>@lelang.Nopek</td>
                                        <td>@lelang.Nama</td>
                                        <td>@lelang.Poin</td>
                                        <td>@lelang.DueDate</td>
                                        <td>@lelang.TanggalPesan</td>
                                        <td>@lelang.Pilihan</td>
                                        <td><input type="checkbox" checked></td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <div class="card-lelang" style="background-color: white; border-radius: 0 0 15px 15px; display: flex; justify-content: flex-end; align-items: center; height: 50px; padding: 10px;">
                            <div class="row" style="width: 100%;">
                                <div class="col" style="display: flex; justify-content: flex-end;">
                                    <a href="/PemenangLelang" class="btn btn-primary" style="margin-right: 12px; font-size: 16px; background-color: #A6D051; color: #FFFFFF;">
                                        Nyatakan Pemenang
                                    </a>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="card-lelang" style="margin-bottom: 15px;">
                        <div class="row">
                            <div class="col">
                                <p class="mb-6" style="margin-left: 12px; margin-top: 12px; color: white; font-size: 16px">Donan No.80</p>
                            </div>
                            <div class="col text-right">
                                <p class="mb-6" style="text-align: right; margin-right: 12px; margin-top: 12px; color: #FFF16E; font-size: 16px; font-style: italic;">
                                    Melalui Pelelangan
                                    <span style="font-size: 14px; color: white; font-style: normal; text-decoration: underline; font-weight: bold; font-style: italic">
                                        Not Set
                                    </span>
                                    <span>
                                        <img src="/images/arrow-bot.png" alt="Alternate Text" style="height: 10px; color: #FFFFFF; width: 20px; margin-left: 1rem; margin-right: 0.5rem" />
                                    </span>
                                </p>
                            </div>
                        </div>
                    </div>

                    <div class="card-lelang" style="margin-bottom: 15px;">
                        <div class="row">
                            <div class="col">
                                <p class="mb-6" style="margin-left: 12px; margin-top: 12px; color: white; font-size: 16px">Sidanegara No.566</p>
                            </div>
                            <div class="col text-right">
                                <p class="mb-6" style="text-align: right; margin-right: 12px; margin-top: 12px; color: #FFF16E; font-size: 16px; font-style: italic;">
                                    Melalui Pelelangan
                                    <span style="font-size: 14px; color: white; font-style: normal; text-decoration: underline; font-weight: bold; font-style: italic">
